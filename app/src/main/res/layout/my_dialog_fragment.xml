<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_for_fragment_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Do you like this dialog ?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/no_fragment_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_for_fragment_dialog"
        android:layout_below="@id/text_view_for_fragment_dialog"
        android:text="No" />

    <Button
        android:id="@+id/yes_fragment_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_for_fragment_dialog"
        android:layout_toRightOf="@id/no_fragment_dialog_button"
        android:text="yes" />

</RelativeLayout>